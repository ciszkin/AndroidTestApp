<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".FlagsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/homeWork2text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/homework_2_flags"
                android:textAlignment="center"
                android:textSize="32sp"
                app:layout_constraintTop_toTopOf="parent" />

            <include layout="@layout/armenia_flag_layout"/>

            <include layout="@layout/austria_flag_layout"/>

            <include layout="@layout/belgium_flag_layout"/>

            <include layout="@layout/latvia_flag_layout"/>

            <include layout="@layout/denmark_flag_layout"/>

            <include layout="@layout/spain_flag_layout"/>

            <include layout="@layout/ireland_flag_layout"/>

            <include layout="@layout/finland_flag_layout" />

            <include layout="@layout/madagascar_flag_layout"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>